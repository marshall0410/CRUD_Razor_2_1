@page
@model CRUD_Razor_2_1.Pages.BooksList.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create Book</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label asp-for="Book.Name"></label>
            <input asp-for="Book.Name" class="form-control" />
        </div>
        <span asp-validation-for="Book.Name" class="text-danger col-sm-6"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label asp-for="Book.Author"></label>
            <input asp-for="Book.Author" class="form-control" />
        </div>
        <span asp-validation-for="Book.Author" class="text-danger col-sm-6"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label asp-for="Book.ISBN"></label>
            <input asp-for="Book.ISBN" class="form-control" />
        </div>
        <span asp-validation-for="Book.ISBN" class="text-danger col-sm-6"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}